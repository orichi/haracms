.navbar.navbar-inverse.navbar-fixed-top
	.navbar-inner
		.container
			%a{ "data-toggle" => "collapse", "data-target" => ".nav-collapse",:class=>"btn btn-navbar"}
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
			%a{:href=>root_path, :class=>"brand"}
