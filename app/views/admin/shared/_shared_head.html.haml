					%li{:class=> @current =='root' ? 'active' : ''}
						= link_to "Home", admin_root_path
					%li{:class=> @current =='product' ? 'active' : ''}
						= link_to "Product", admin_products_path
					%li{:class=> @current =='message' ? 'active' : ''}
						= link_to "Message", admin_messages_path
					%li{:class=> @current =='user' ? 'active' : ''}
